algoritmo "média aritmética"

var

v1,v2,media:real
inicio
escreva("Digite o primeiro valor: ")
leia(v1)
escreva("Digite o seugundo valor: ")
leia(v2)
media <- (v1 + v2) / 2

se(media >= 70)entao
    escreva("Pode fazer compras!")
senao
    escreva("Não pode fazer compras!")
fimse
escreva(media)
fimalgoritmo
